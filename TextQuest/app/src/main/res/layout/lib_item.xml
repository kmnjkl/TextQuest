<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lib_description"
        android:layout_width="159dp"
        android:layout_height="65dp"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quest_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/lib_quest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/lib_quest_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            android:textColor="#000000" />
    </LinearLayout>

    <ImageView
        android:id="@+id/lib_quest_new_game"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:clickable="true"
        app:srcCompat="@drawable/ic_new" />

    <ImageView
        android:id="@+id/lib_quest_settings"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:clickable="true"
        app:srcCompat="@drawable/ic_settings" />

    <ImageView
        android:id="@+id/lib_quest_delete"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:clickable="true"
        app:srcCompat="@drawable/ic_delete" />
</LinearLayout>